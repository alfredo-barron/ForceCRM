          <img src="{{ urlFor('root') }}public/img/vendedor.png" class="user-image" alt="Agente de Ventas" />
        {% elseif role.name == "Agente de Ventas" and user.gender == "M" %}
          <img src="{{ urlFor('root') }}public/img/vendedora.png" class="user-image" alt="Agente de Ventas" />
        {% endif %}
