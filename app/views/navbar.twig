            <li class="user-header">
              {% if role.name == "Administrador" %}
                <img src="{{ urlFor('root') }}public/img/admin.png" class="img-circle" alt="Administrador" />
              {% elseif role.name == "Jefe de Marketing" and user.gender == "H" %}
